{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "es6",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "ASSETS/*": [
                "assets/*"
            ],
            "@/*": [
                "src/*"
            ],
            "Core/*": [
                "src/core/*"
            ],
            "LIB/*": [
                "src/lib/*"
            ],
        },
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}
